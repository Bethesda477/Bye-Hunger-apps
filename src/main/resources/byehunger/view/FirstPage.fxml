<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="777.0" styleClass="user-choice-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="byehunger.view.FirstPageController">
   <children>
      <ImageView fitHeight="601.0" fitWidth="1144.0" pickOnBounds="true" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-344.0" AnchorPane.topAnchor="0.0">
         <image>
            <Image url="@../../images/FirstPage.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            
            <!-- Subtitle -->
            <Label alignment="CENTER" lineSpacing="5.0" prefHeight="23.0" prefWidth="267.0" styleClass="app-subtitle" text="Choose Your Role" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="20.0" top="60.0" />
               </VBox.margin></Label>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="674.0" spacing="150.0">
               <children>
                  
                        <!-- Merchant Button -->
                  <Button fx:id="merchantButton" onAction="#handleMerchantChoice" styleClass="firstPage-merchant-button" text="I'm a Merchant" />
                  <!-- User Button -->
                  <Button fx:id="userButton" onAction="#handleUserChoice" styleClass="firstPage-login-button" text="I'm a User" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
